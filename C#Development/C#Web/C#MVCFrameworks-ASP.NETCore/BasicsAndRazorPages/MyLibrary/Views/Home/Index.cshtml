@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";
}

<h1>My Library</h1>
<a asp-area="" asp-controller="Book" asp-action="Add" class="btn btn-success">Add new book</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Status</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.IsBorrowed</td>
            </tr>
        }
    </tbody>
</table>