@using MyLibrary.ViewModels
@model BookDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container container-fluid">
    <div class="row">
        <div class="pull-left">
            <img id="coverBookImage" src="@Model.ImageUrl" alt=""/>
        </div>
        <div class="col-sm-8">
            <h1>@Model.Title</h1>
            <h4>by @Model.Author</h4>
            <h1>Description:</h1>
            <p style="margin-left: 2em">@Model.Description</p>
            <div>
                <strong>Status: </strong><strong id="status">@Model.Status</strong>
            </div>
        </div>
    </div>
</div>

